FROM python:3.12-slim

# Add curl for AgentBeats healthchecks (~10MB)
RUN apt-get update && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .
RUN chmod +x /app/scripts/run-purple.sh

RUN pip install --no-cache-dir \
    fastapi \
    "uvicorn[standard]" \
    httpx \
    google-genai \
    openai \
    pydantic

EXPOSE 9009

#HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
#    CMD curl -f http://localhost:9009/.well-known/agent.json || exit 1

#ENTRYPOINT ["python", "-m", "uvicorn", "purple-agent.main:app", "--host", "0.0.0.0", "--port", "9009"]
ENTRYPOINT ["/app/scripts/run-purple.sh"]
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:9009/health || exit 1