FROM python:3.12-slim

WORKDIR /app
COPY . .

RUN pip install --no-cache-dir \
    fastapi \
    "uvicorn[standard]" \
    httpx \
    pydantic

EXPOSE 9090

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9090/.well-known/agent.json || exit 1

CMD ["python", "-m", "uvicorn", "purple-agent.main:app", "--host", "0.0.0.0", "--port", "9090"]
